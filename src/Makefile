# comments begin with #

# for convenience, define variable $(OBJS) to list of object files
# OBJS= tokenizer.o uimain.o tester.o
OBJS= uimain.o tokenizer.o history.o

# make has a "default rule" specifying how to build a an "object" file (.o) from a C source file (.c)
#            this rule includes $(CFLAGS) as one of cc's parameters 
CFLAGS=-g -O3 # -g for debug, -O3 for optimization

# first target is built by default.  Usually named "all"
all: tokenizer

# tokenizer (target) depends on all object files (prerequisites)
tokenizer: $(OBJS)
	cc -o tokenizer $(CFLAGS) $(OBJS)

# all object files built from c files that include tokenizer.h
$(OBJS): tokenizer.h
$(OBJS): history.h

# deletes files generated by compilation
clean:
	rm -f *.o tokenizer

run:tokenizer
	./tokenizer
